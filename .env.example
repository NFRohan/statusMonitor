# StatusMonitor Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_USER=statusmonitor
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=statusmonitor
DATABASE_URL=postgresql://statusmonitor:change-me-in-production@postgres:5432/statusmonitor

# =============================================================================
# AUTH SERVICE
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-generate-a-secure-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# INFLUXDB
# =============================================================================
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=change-me-in-production
INFLUXDB_ORG=statusmonitor
INFLUXDB_BUCKET=metrics
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=change-me-in-production

# =============================================================================
# SERVICES (Internal)
# =============================================================================
AUTH_SERVICE_URL=http://auth-service:8000

# =============================================================================
# AGENT CONFIGURATION (For standalone agent)
# =============================================================================
INGESTION_URL=http://localhost:8001
AGENT_TOKEN=your-agent-token-from-dashboard
COLLECTION_INTERVAL=5
